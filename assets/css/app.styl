body 
  font 10px sans-serif
  margin 0

.clear
   clear both

path.line 
  fill none
  stroke #666
  stroke-width 1.5px

path.area 
  fill #e7e7e7

.container-fluid
   margin-top 20px

div.well-large
   text-align center
   font-size 20px
   padding 20px
   

span.burner-state
   text-align center
   font-size 15px
   padding 4px 15px
   margin-top -10px

.values
   list-style-type none
   margin 0
   padding 0

   h3 
      font-size 20px
      margin 0

   li
      clear left
      margin 0
      padding 0
      margin-bottom 30px
      
      .temp
        font-size 18px
  
      p.high
         background-color red

      p.low
         background-color yellow

      p.normal
         background-color green
.command 
   margin-top 20px
   width 95%

.graphs
   margin-top 15px
   .graph      
      margin-bottom 20px
      
      .label
         fill #666
         font-weight normal

.title
   font-weight bold
   font-size 15px

.axis
  shape-rendering crispEdges

.x.axis line 
  stroke black

.x.axis path 
  fill none
  stroke #000

.y.axis line, .y.axis path 
  fill none
  stroke #000

dl.info
   dt 
      font-size 120%
   dd
      font-size 100%
